<!-- Place details page -->

<h1><%= @place["name"] %></h1>

<h3>Entries</h3>

<ul>
  <% for entry in @entries %>
    <li>
      <h2><%= entry["title"] %></h2>
      <h5><%= entry["posted_on"] %></h5>
      <h3><%= entry["description"] %></h3>
    </li>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p><a href="/places">Back to All Places</a></p>

<form action="/places/<%= @place["id"] %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete Place</button>
</form>